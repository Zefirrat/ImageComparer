<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>Zefirrat.ImageComparer.Abstractions</AssemblyName>
        <AssemblyTitle>Zefirrat.ImageComparer.Abstractions</AssemblyTitle>
        <PackageIconUrl>https://avatars.githubusercontent.com/u/37443756?v=4</PackageIconUrl>
        <RepositoryUrl>https://github.com/Zefirrat/ImageComparer</RepositoryUrl>
        <PackageProjectUrl>https://github.com/Zefirrat/ImageComparer</PackageProjectUrl>
        <PackageTags>Image Similar Equals Compare Percision Accuracy Jpg Png</PackageTags>
        <Description>.Net C# Package. Recognition of similar or same images, with varying degrees of accuracy. For example, for images with noise, the similarity of compressed images and the original ones, to search for the original image by its compressed copy, to search for images with small changes or distortions.</Description>
        <Configurations>Debug;Release</Configurations>
        <Version>1.1.0</Version>
        <AssemblyVersion>1.1.0</AssemblyVersion>
        <FileVersion>1.1.0</FileVersion>
    </PropertyGroup>
    
    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <TargetFrameworks>netcoreapp3.1;netstandard2.0;netstandard2.1</TargetFrameworks>
        <LangVersion>8</LangVersion>
        <ImplicitUsings>disable</ImplicitUsings>
        <Author>Zefirrat</Author>
        <Links>https://github.com/Zefirrat/ImageComparer/tree/main</Links>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="SixLabors.ImageSharp" Version="2.1.6" />
    </ItemGroup>

</Project>
